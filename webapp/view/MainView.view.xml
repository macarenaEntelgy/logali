<mvc:View controllerName="dev.invoices.controller.MainView"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns="sap.m" xmlns:core="sap.ui.core">
    <Page id="page" title="{i18n>title}">
        <content>
            <Panel id="panel" headerText="{i18n>selectionScreen}">
                <Label id="labelShipName" labelFor="shipName" text="{i18n>shipName}" class="sapUiSmallMargin"/>
                <Input id="shipName"  value="{selectionScreen>/ShipName}" width="200px" class="sapUiSmallMarginEnd"/>
                <Label id="labelCountry" text="{i18n>country}" class="sapUiSmallMargin"/>
                <Select id="slCountry" 
                        selectedKey="{selectionScreen>/CountryKey}" 
                        forceSelection="false" 
                        items="{selectionScreen>/Countries}">
                    <items>
                        <core:Item id="item" key="{selectionScreen>key}" text="{selectionScreen>text}"/>
                    </items>        
                </Select>
                <Button id="btnFilter" 
                        text="{i18n>btnFilter}" 
                        icon="sap-icon://filter" 
                        press="onFilter" 
                        class="sapUiSmallMarginEnd"/>
                <Button id="btnClearFilter"
                        text="{i18n>btnClearFilter}"
                        icon="sap-icon://clear-filter"
                        press="onClearFilter"
                        class="sapUiSmallMarginEnd"/>
            </Panel>
        </content>
    </Page>
</mvc:View>
